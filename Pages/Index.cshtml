@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <form method="post">
        <label for="price">Price:</label>
        <input id="price" type="number" step="0.01" asp-for="@Model.UnitPrice">
        <label for="maxTank">Max Tank:</label>
        <input id="maxTank" type="number" asp-for="@Model.MaxTank">
        <input type="submit">
    </form>

<p>Text input is: @Model.Result</p>
